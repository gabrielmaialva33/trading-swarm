<!-- TradingSwarm - Professional Dark Trading Platform -->
<div class="min-h-screen bg-gray-900" style="background: linear-gradient(135deg, #050506 0%, #120a0a 100%);">
  
<!-- Navigation Header -->
  <nav class="relative z-50 bg-gray-900/95 backdrop-blur-md border-b border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, rgb(60, 158, 254), rgb(93, 199, 190));">
            <.icon name="hero-rocket-launch-solid" class="size-6 text-white" />
          </div>
          <div class="font-bold text-xl text-white">TradingSwarm</div>
        </div>
        
<!-- Navigation Links -->
        <div class="hidden md:flex items-center space-x-8">
          <.link
            navigate={~p"/app/dashboard"}
            class="flex items-center space-x-2 text-gray-300 hover:text-cyan-400 font-medium transition-all duration-300 hover:scale-105"
          >
            <.icon name="hero-squares-2x2" class="size-4" />
            <span>Dashboard</span>
          </.link>
          <.link
            navigate={~p"/app/agents"}
            class="flex items-center space-x-2 text-gray-300 hover:text-cyan-400 font-medium transition-all duration-300 hover:scale-105"
          >
            <.icon name="hero-users" class="size-4" />
            <span>Agents</span>
          </.link>
          <.link
            navigate={~p"/app/surveillance"}
            class="flex items-center space-x-2 text-gray-300 hover:text-cyan-400 font-medium transition-all duration-300 hover:scale-105"
          >
            <.icon name="hero-eye" class="size-4" />
            <span>AI Surveillance</span>
          </.link>
        </div>
      </div>
    </div>
  </nav>
  
<!-- Hero Section with Neon Glow -->
  <div class="relative overflow-hidden">
    <!-- Animated Background Orbs -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-32 w-80 h-80 rounded-full opacity-20 animate-pulse" style="background: radial-gradient(circle, rgb(60, 158, 254), transparent);"></div>
      <div class="absolute -bottom-40 -left-32 w-96 h-96 rounded-full opacity-15 animate-pulse" style="background: radial-gradient(circle, rgb(93, 199, 190), transparent);"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 rounded-full opacity-10" style="background: radial-gradient(circle, rgb(113, 126, 251), transparent);"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-20">
      <div class="text-center">
        <!-- Glowing Main Title -->
        <h1 class="text-5xl sm:text-6xl md:text-7xl font-bold text-white mb-8">
          <span class="block">Elite AI Trading</span>
          <span class="block bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent relative">
            Command Center
            <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400/20 via-blue-500/20 to-purple-600/20 rounded-lg blur opacity-75 animate-pulse"></div>
          </span>
        </h1>
        
<!-- Enhanced Subtitle -->
        <p class="max-w-4xl mx-auto text-xl sm:text-2xl text-gray-300 mb-12 leading-relaxed">
          <span class="text-cyan-400 font-semibold">Rehoboam AI</span> provides omnipresent market surveillance, 
          predictive analytics, and autonomous trading execution. 
          <span class="text-blue-400">Experience algorithmic trading evolution.</span>
        </p>
        
<!-- Glowing CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <.link
            navigate={~p"/app/dashboard"}
            class="group relative inline-flex items-center px-8 py-4 text-lg font-bold text-white rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
            style="background: linear-gradient(135deg, rgb(60, 158, 254), rgb(93, 199, 190)); box-shadow: 0 0 30px rgba(60, 158, 254, 0.3);"
          >
            <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-cyan-400 to-blue-500 opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
            <.icon name="hero-chart-bar-square" class="mr-3 size-6" />
            Launch Dashboard
            <.icon name="hero-arrow-right" class="ml-3 size-6" />
          </.link>

          <.link
            navigate={~p"/app/surveillance"}
            class="group relative inline-flex items-center px-6 py-3 text-lg font-medium text-gray-200 bg-gray-800/50 border border-gray-600 hover:border-cyan-400 rounded-xl backdrop-blur-sm transition-all duration-300 hover:bg-gray-800/80"
          >
            <.icon name="hero-eye" class="mr-2 size-5" />
            AI Surveillance Hub
          </.link>
        </div>
      </div>
    </div>
  </div>
  
<!-- Features Grid - Dark Cards with Neon Accents -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center mb-16">
