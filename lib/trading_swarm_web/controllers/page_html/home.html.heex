                  <span class="text-gray-300">System Status</span>
                  <div class="flex items-center">
                    <div class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse"></div>
                    <span class="text-green-400 font-semibold">ACTIVE</span>
                  </div>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg bg-gray-800/50 border border-gray-600">
                  <span class="text-gray-300">Market Coverage</span>
                  <span class="text-cyan-400 font-bold">Global</span>
                </div>
                <div class="flex items-center justify-between p-4 rounded-lg bg-gray-800/50 border border-gray-600">
                  <span class="text-gray-300">Prediction Accuracy</span>
                  <span class="text-purple-400 font-bold">94.7%</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
